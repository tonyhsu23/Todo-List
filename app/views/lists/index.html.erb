<div class="container page-top">
  <div class="input-group list col-md-4 col-md-offset-4" ng-controller="ListController as listCtrl">
    <form ng-submit="listCtrl.addList()">
      <div class="input-group">
        <input type="text" class="form-control input-lg" ng-model="listCtrl.lists.title" placeholder="input todo list title here">
        <span class="input-group-btn">
          <button class="btn btn-primary btn-lg" type="button">New</button>
        </span>
      </div>
    </form>
  </div>
  <br>

  <div class="col-md-4 col-md-offset-4" ng-controller="ListController as listCtrl" ng-init="listCtrl.initial(<%= @lists %>)">
    <div class="list-group">
      <a href="/lists/{{list.id}}/todos" class="list-group-item" ng-repeat="list in listCtrl.lists" ng-model="list.title">
        {{list.title}}
        <span class="badge">{{list.count}}</span>
      </a>
    </div>
  </div>
</div>
